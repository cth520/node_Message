{
    "name": "Node.js App",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
    "customizations": {
      "vscode": {
        "extensions": [
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode",
          "bradlc.vscode-tailwindcss"
        ]
      }
    },
    "forwardPorts": [3000],
    "portsAttributes": {
      "3000": {
        "label": "Application",
        "onAutoForward": "notify"
      }
    },
    "postCreateCommand": "npm install",
    "remoteUser": "node"
  }